{
	"easycom": { // uni-ui 规则如下配置
		"autoscan": true,
		"custom": {
			"^u-(.*)": "@/UI/uView/components/u-$1/u-$1.vue", //uView
			"^uni-(.*)": "@/UI/uni_modules/uni-$1/components/uni-$1/uni-$1.vue", //uni-ui 匹配规则
			"^my-(.*)": "@/components/mp-weixin/my-$1/my-$1.vue" //个人中心 匹配规则
		}
	},


	"pages": [ // 这里的条件编译是 不同平台展示的  第一启动项不一样


		//#ifdef H5
		{
			"path": "platforms/h5/home/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		},
		//#endif


		{
			"path": "platforms/mp-weixin/y-home/index", //用户
			"style": {
				"navigationBarTitleText": "首页"
			}
		},
		{
			"path": "platforms/mp-weixin/y-cosplayMask/index", //用户
			"style": {
				"navigationBarTitleText": "授权"
			}
		},


		{
			"path": "platforms/mp-weixin/y-test/index", //用户
			"style": {
				"navigationBarTitleText": "测试"
			}
		},


		{
			"path": "platforms/mp-weixin/s-register/index", //用户
			"style": {
				"navigationBarTitleText": "注册"
			}
		},

		{
			"path": "platforms/mp-weixin/y-my/index", //用户
			"style": {
				"navigationBarTitleText": "个人中心"
			}
		},


		{
			"path": "platforms/mp-weixin/y-home/home-details/index", //用户
			"style": {
				"navigationBarTitleText": "商家详情"
			}
		},




		{
			"path": "platforms/mp-weixin/y-ChatList/index", //用户
			"style": {
				"navigationBarTitleText": "聊天列表"
			}
		},



		{
			"path": "platforms/mp-weixin/s-chatList/index",
			"style": {
				"navigationBarTitleText": "商家聊天列表"
			}
		},
		{
			"path": "platforms/mp-weixin/s-my/index",
			"style": {
				"navigationBarTitleText": "个人中心"
			}
		},

		{
			"path": "platforms/mp-weixin/y-PetCrcle/index",
			"style": {
				"navigationBarTitleText": "宠物圈",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "platforms/mp-weixin/y-petCrcle-comments/index",
			"style": {
				"navigationBarTitleText": "评论"
			}
		},
		{
			"path": "platforms/mp-weixin/y-petCrcle-Publish/index",
			"style": {
				"navigationBarTitleText": "发表说说"
			}
		},






		{
			"path": "platforms/mp-weixin/y-petCrcle-reply/index",
			"style": {
				"navigationBarTitleText": "评论详情",
				"enablePullDownRefresh": false
			}

		},



		{
			"path": "platforms/mp-weixin/y-map/index",
			"style": {
				"navigationBarTitleText": "地图",
				"enablePullDownRefresh": false
			}

		}
	],


	"tabBar": {
		"color": "#6d6966",
		"selectedColor": "#007aff",
		"backgroundColor": "#fff",
		"position": "bottom",
		"borderStyle": "black",
		"list": [{
				"pagePath": "platforms/mp-weixin/y-home/index",
				"text": "聊天列表",
				"iconPath": "static/mp-weixin/icon/home.png",
				"selectedIconPath": "static/mp-weixin/icon/_home.png"
			},
			{
				"pagePath": "platforms/mp-weixin/y-PetCrcle/index",
				"text": "宠物圈",
				"iconPath": "static/mp-weixin/icon/PetCrcle.png",
				"selectedIconPath": "static/mp-weixin/icon/_PetCrcle.png"
			},
			{
				"pagePath": "platforms/mp-weixin/y-my/index",
				"text": "我的",
				"iconPath": "static/mp-weixin/icon/my.png",
				"selectedIconPath": "static/mp-weixin/icon/_my.png"
			},


			{
				"pagePath": "platforms/mp-weixin/s-chatList/index",
				"text": "聊天列表",
				"iconPath": "static/mp-weixin/icon/chatList.png",
				"selectedIconPath": "static/mp-weixin/icon/_chatList.png"
			},
			{
				"pagePath": "platforms/mp-weixin/s-my/index",
				"text": "我的",
				"iconPath": "static/mp-weixin/icon/my.png",
				"selectedIconPath": "static/mp-weixin/icon/_my.png"
			}

		]


	},

	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "Pet",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	}




}

{
	"easycom": { // uni-ui 规则如下配置
		"autoscan": true,
		"custom": {
			"^u-(.*)": "@/UI/uView/components/u-$1/u-$1.vue" //uView
		}
	},

	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages

		{
			"path": "pages/home/index",
			"style": {
				"navigationBarTitleText": "首页"
			},
			"enablePullDownRefresh":true
		},
		{
			"path": "pages/my/index",
			"style": {
				"navigationBarTitleText": "我的"
			}
		},
		{
			"path": "pages/PetCrcle/index",
			"style": {
				"navigationBarTitleText": "宠物圈"
			}
		}
	],
	"tabBar": {
		"color": "#aaffff",
		"selectedColor": "#007aff",
		"backgroundColor": "#fff",
		"position": "bottom",
		"borderStyle": "black",
		"list": [{
				"pagePath": "pages/home/index",
				"text": "首页",
				"iconPath": "static/icon/home.png",
				"selectedIconPath": "static/icon/_home.png"
			},
			{
				"pagePath": "pages/PetCrcle/index",
				"text": "宠物圈",
				"iconPath": "static/icon/PetCrcle.png",
				"selectedIconPath": "static/icon/_PetCrcle.png"
			},
			{
				"pagePath": "pages/my/index",
				"text": "我的",
				"iconPath": "static/icon/my.png",
				"selectedIconPath": "static/icon/_my.png"
			}
		]

	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "Pet",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	}




}

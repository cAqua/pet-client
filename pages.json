{
	"easycom": { // uni-ui 规则如下配置
		"autoscan": true,
		"custom": {
			"^u-(.*)": "@/UI/uView/components/u-$1/u-$1.vue", //uView
			"^uni-(.*)": "@/UI/uni_modules/uni-$1/components/uni-$1/uni-$1.vue" //uni-ui 匹配规则

		}
	},


	"pages": [// 这里的条件编译是 不同平台展示的  第一启动项不一样
		//#ifdef MP-WEIXIN
		{
			"path": "pages/weixin/home/index",
			"style": {
				"navigationBarTitleText": "首页"
			},
			"enablePullDownRefresh": true
		},
		//#endif


		//#ifdef H5
		{
			"path": "pages/H5/home/index",
			"style": {
				"navigationBarTitleText": "首页"
			},
			"enablePullDownRefresh": true
		},
		//#endif
		
		
		{
			"path": "pages/weixin/my/index",
			"style": {
				"navigationBarTitleText": "我的"
			}
		},

		{
			"path": "pages/weixin/register/index",
			"style": {
				"navigationBarTitleText": "注册"
			}
		},
		{
			"path": "pages/weixin/PetCrcle/index",
			"style": {
				"navigationBarTitleText": "宠物圈"
			}
		}
	],


	"tabBar": {
		"color": "#6d6966",
		"selectedColor": "#007aff",
		"backgroundColor": "#fff",
		"position": "bottom",
		"borderStyle": "black",
		"list": [{
				"pagePath": "pages/weixin/home/index",
				"text": "首页",
				"iconPath": "static/weixin/icon/home.png",
				"selectedIconPath": "static/weixin/icon/_home.png"
			},
			{
				"pagePath": "pages/weixin/PetCrcle/index",
				"text": "宠物圈",
				"iconPath": "static/weixin/icon/PetCrcle.png",
				"selectedIconPath": "static/weixin/icon/_PetCrcle.png"
			},
			{
				"pagePath": "pages/weixin/my/index",
				"text": "我的",
				"iconPath": "static/weixin/icon/my.png",
				"selectedIconPath": "static/weixin/icon/_my.png"
			}
		]


	},

	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "Pet",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	}




}
